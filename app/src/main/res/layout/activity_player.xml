<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_player"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/player2"
    tools:context="com.roshan.mplayer.Player">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:id="@+id/seekBar"
        android:padding="20dp"
        style="@style/Widget.AppCompat.SeekBar"
        android:max="@android:integer/config_mediumAnimTime"
        android:progress="@android:integer/config_longAnimTime" />

    <Button
        android:text="@string/play"
        android:layout_width="60dp"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/btPlay"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:elevation="24dp" />

    <Button
        android:text="@string/fast"
        android:layout_width="60dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btPlay"
        android:layout_toRightOf="@+id/btPlay"
        android:layout_toEndOf="@+id/btPlay"
        android:id="@+id/btFF"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:elevation="24dp" />

    <Button
        android:text="@string/slow"
        android:layout_width="60dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btPlay"
        android:layout_toLeftOf="@+id/btPlay"

        android:id="@+id/btFB"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:elevation="23dp" />

    <Button
        android:text= "@string/next"
        android:layout_width="60dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btFF"
        android:layout_toRightOf="@+id/btFF"
        android:layout_toEndOf="@+id/btFF"
        android:id="@+id/btNXT"
        style="@android:style/Widget.Button.Inset"
        android:elevation="24dp" />

    <Button
        android:text="@string/prev"
        android:layout_width="60dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btFB"
        android:layout_toLeftOf="@+id/btFB"
        android:id="@+id/btPv"
        style="@android:style/Widget.Button.Inset"
        android:elevation="24dp" />

    <TextView
        android:text="Small Text"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/textView5"
        android:textSize="24sp" />

    <TextView
        android:text="Medium Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btFB"
        android:layout_toEndOf="@+id/btFB"
        android:id="@+id/textView4" />

    <TextView
        android:text="Small Text"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:id="@+id/textView3" />

    <TextView
        android:text="song_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="italic"
        />

</RelativeLayout>
